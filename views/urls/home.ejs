<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Welcome to URL-Shortener Service!</h1>
    <div class="col-6 offset-3">
        <form action="/snipUrl/generateUrl" method="post" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="url">Url:</label>
            <input class="form-control" type="text" id="url" name="url"  required>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Shorten Url</button>
        </div>
        </form>
    </div>
</div>